#!/bin/bash
# Source this file to set environment variables in your current shell
# Usage: source env.sh  (or: . env.sh)

# SETUP INSTRUCTIONS:
# 1. Copy this file: cp env.sh.example env.sh
# 2. Fill in your actual credentials in env.sh
# 3. The real env.sh is gitignored for security

# Set the region: ie1 for UK/Europe, "" or "default" for US, au1 for Australia
# NOTE: For US (default region), use empty string or "default"
# export TWILIO_REGION=""
export TWILIO_REGION="ie1"  # For UK/Europe
# export TWILIO_REGION="au1"  # For Australia

# Configure credentials based on region
if [ "$TWILIO_REGION" = "ie1" ]; then
    # Ireland (IE1) region credentials for UK/European numbers
    export TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Your IE1 Account SID
    export TWILIO_AUTH_TOKEN="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"     # Your IE1 Auth Token
    export TWILIO_VERIFY_SERVICE_SID="VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Your IE1 Service SID
    export PHONE_NUMBER="+447xxxxxxxxx"  # Your UK number
elif [ "$TWILIO_REGION" = "us1" ] || [ "$TWILIO_REGION" = "" ] || [ "$TWILIO_REGION" = "default" ]; then
    # United States (US1) region credentials (default, no edge location needed)
    export TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Your US Account SID
    export TWILIO_AUTH_TOKEN="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"     # Your US Auth Token
    export TWILIO_VERIFY_SERVICE_SID="VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Your US Service SID
    export PHONE_NUMBER="+1xxxxxxxxxx"  # Your US number
elif [ "$TWILIO_REGION" = "au1" ]; then
    # Australia (AU1) region credentials
    export TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Your AU1 Account SID
    export TWILIO_AUTH_TOKEN="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"     # Your AU1 Auth Token
    export TWILIO_VERIFY_SERVICE_SID="VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Your AU1 Service SID
    export PHONE_NUMBER="+61xxxxxxxxx"  # Your Australian number
else
    echo "Error: Unknown TWILIO_REGION '$TWILIO_REGION'"
    echo "Valid regions: ie1 (UK/EU), us1 (US), au1 (Australia)"
    return 1
fi

echo "✓ Configured for region: $TWILIO_REGION"
echo "✓ Phone number: $PHONE_NUMBER"
echo "✓ Account SID: ${TWILIO_ACCOUNT_SID:0:10}..."

